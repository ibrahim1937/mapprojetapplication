                            <label for="vill">Ville</label>
                            <input type="text" class="form-control" id="ville" placeholder="Entrez la ville du monument..."  name="ville" value="<%= e.ville %>"  required>
                        </div>
                        <div class="form-group">
                            <button class="btn m-3 btn-success" type="submit">Modifier</button>
