</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-primary" id="mainnavbar">
        <a class="navbar-brand" href="/">Site</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/monument">Monument</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/visite">Visite</a>
            </li>
            
          </ul>
        </div>
      </nav>


    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="text text-center text-primary">
                    Visite
                </h1>
            </div>
        </div>
        <div class="row container-fluid">
            <div class="col-sm-11 col-lg-6 m-3">
                <div class="card">
                    <div class="card-header">
                        <h3 class="text text-center text-primary">
                            La map
                        </h3>
                    </div>
                    <div class="card-body">
                        <div id="mapid"></div>
                    </div>
                </div>
            </div>
            <div class="col-sm-11 m-3 col col-lg-5">


                
                    <form action="">
                        <h3 class="text text-center text-success h3">
                            Ajouter une visite
                        </h3>
                        <div class="form-group">
                            <label for="monument">Monument</label>
                            <select class="custom-select" id="selectmonument">
                                <option selected value="">Choisir un monument...</option>

                                <% monuments.forEach(function(e){ %>

                                    <option value="<%= e.id %>"><%= e.nom %></option>
                                <% }); %>
                                
                              </select>
                        </div>
                        <div class="form-group">
                            <button class="btn m-3 btn-success" type="submit" id="visits">Ajouter</button>
                            <button class="btn m-3 btn-primary" type="reset">RÃ©initialiser</button>
                            <!-- <button class="btn m-3 btn-info" type="button" id="myposition">Ma position</button> -->
                        </div>
                    </form>

                    <hr>
                
            </div>
        </div>
        <div class="row">
            <div class="col-sm-11 m-3">
                <div>
                    <h3 class="text text-center text-success">
                        Liste des visites
                    </h3>
                </div>
                <div class="container">
                    <table class="table table-stripped table-hover">
                        <thead>
                            <tr>
                              <th scope="col">#id </th>
                              <th scope="col">Longitude</th>
                              <th scope="col">Largitude</th>
                              <th scope="col">Monument</th>
                              <th scope="col">Date</th>
                              <th scope="col">visite</th>
                            </tr>
                          </thead>
                          <tbody>

                            <% visites.forEach(function(e){ %>
                                <tr>
                                    <td><%= e.id %></td>
                                    <td><%= e.longitude %></td>
                                    <td><%= e.latitude %></td>
                                    <td><%= e.nom %></td>
                                    <td><%= e.date %></td>
                                    <td><%= e.visited %></td>
                                </tr>
                            <% }); %>
                            
                          </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

    <p id="data" style="visibility: hidden;"><%= [JSON.stringify(monuments)] %></p>


<script>
    

let monuments = $('#data').text();



</script>

<script src="/js/visite.js"></script>
</body>
</html>