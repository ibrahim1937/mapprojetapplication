 <script src="https://unpkg.com/leaflet@1.7.1/dist/leaflet.js"
 integrity="sha512-XQoYMqMTK8LvdxXYG3nZ448hOEQiglfqkJs1NOQV44cWnUrBc8PkAOcXy20w0vlaXaVUearIOBhiXZ5V3ynxwA=="
 crossorigin=""></script>
  <script src="/main.js"></script>
</head>
<body>

    <nav class="navbar navbar-expand-lg navbar-light bg-primary" id="mainnavbar">
        <a class="navbar-brand" href="/">Site</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
      
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/monument">Monument</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/visite">Visite</a>
            </li>
            
          </ul>
        </div>
      </nav>


    <div class="container">
        <div class="row">
            <div class="col">
                <h1 class="text text-center text-primary">
                    Gestion monument
                </h1>
            </div>
        </div>
        <div class="row">
            <div class="col-sm-11 m-3">


                
                    <form action="/monument/save" method="post">
                        <h3 class="text text-center text-success h3">
                            Ajouter un monument
                        </h3>
                        <div class="form-group">
                            <label for="nom-monument">Nom Monumenet</label>
                            <input type="text" class="form-control" id="nom-monument" placeholder="Entrez le nom du monument..." name="nom" required> 
                        </div>
                        <div class="form-group">
                            <label for="longitude">Longitude</label>
                            <input type="text" class="form-control" id="longitude" placeholder="Entrez la Longitude du monument..." name="longitude" required>
                        </div>
                        <div class="form-group">
                            <label for="largitude">Latitude</label>
                            <input type="text" class="form-control" id="latitude" placeholder="Entrez la Latitude du monument..." name="latitude" required> 
                        </div>
                        <div class="form-group">
                            <label for="vill">Ville</label>
                            <input type="text" class="form-control" id="ville" placeholder="Entrez la ville du monument..."  name="ville" required>
                        </div>
                        <div class="form-group">
                            <button class="btn m-3 btn-success" type="submit">Ajouter</button>
                            <button class="btn m-3 btn-primary" type="reset">RÃ©initialiser</button>
                        </div>
                    </form>

                    <hr>
                
            </div>
            <div class="col-sm-11 m-3">
                <div>
                    <h3 class="text text-center text-success">
                        Liste des monuments
                    </h3>
                </div>
                <div class="container">
                    <table class="table table-stripped table-hover">
                        <thead>
                            <tr>
                              <th scope="col">#id </th>
                              <th scope="col">Nom</th>
                              <th scope="col">Longitude</th>
                              <th scope="col">Latitude</th>
                              <th scope="col">Ville</th>
                              <th scope="col">Options</th>
                            </tr>
                          </thead>
                          <tbody>
                            <% monuments.forEach(function(e){ %>
                                <tr>
                                    <td><%= e.id %></td>
                                    <td><%= e.nom %></td>
                                    <td><%= e.longitude %></td>
                                    <td><%= e.latitude %></td>
                                    <td><%= e.ville %></td>
                                    
                                    <td>
                                        <a href="/monument/edit/<%= e.id %>" class="btn btn-sm btn-primary">Edit</a>
                                        <a href="/monument/delete/<%= e.id %>" class="btn btn-sm btn-danger">Delete</a>
                                    </td>
                                </tr>
                            <% }); %>
                          </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>

</body>
</html>